{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@genres/*": [
        "./src/genres/*"
      ],
      "@movies/*": [
        "./movies/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}